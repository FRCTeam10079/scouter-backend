{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": ["**", "!src/db/prisma", "!build"]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "complexity": {
        "noExcessiveNestedTestSuites": "on",
        "noForEach": "on",
        "noUselessStringConcat": "on",
        "useSimplifiedLogicExpression": "on",
        "useWhile": "on"
      },
      "correctness": {
        "noGlobalDirnameFilename": "on",
        "noUndeclaredDependencies": "on",
        "noUndeclaredVariables": "on",
        "useSingleJsDocAsterisk": "on"
      },
      "style": {
        "noCommonJs": "on",
        "noDoneCallback": "on",
        "noInferrableTypes": "on",
        "noUnusedTemplateLiteral": "on",
        "noUselessElse": "on",
        "noYodaExpression": "on",
        "useBlockStatements": "on",
        "useCollapsedElseIf": "on",
        "useCollapsedIf": "on",
        "useConsistentArrayType": "on",
        "useConsistentObjectDefinitions": "on",
        "useDefaultParameterLast": "on",
        "useExponentiationOperator": "on",
        "useFilenamingConvention": {
          "level": "on",
          "options": { "filenameCases": ["kebab-case"] }
        },
        "useForOf": "on",
        "useGroupedAccessorPairs": "on",
        "useNamingConvention": {
          "level": "on",
          "options": {
            "strictCase": false,
            "conventions": [
              {
                "selector": { "kind": "let" },
                "formats": ["camelCase"]
              },
              {
                "selector": { "kind": "function" },
                "formats": ["camelCase"]
              },
              {
                "selector": { "kind": "classMember" },
                "formats": ["camelCase"]
              },
              {
                "selector": {
                  "kind": "classProperty",
                  "modifiers": ["static", "readonly"]
                },
                "formats": ["CONSTANT_CASE"]
              },
              {
                "selector": { "kind": "typeProperty" },
                "formats": ["camelCase"]
              },
              {
                "selector": { "kind": "namespace" },
                "formats": ["PascalCase"]
              },
              {
                "selector": { "kind": "importNamespace" },
                "formats": ["camelCase"]
              },
              {
                "selector": { "kind": "exportNamespace" },
                "formats": ["camelCase"]
              }
            ]
          }
        },
        "useNodeAssertStrict": "on",
        "useObjectSpread": "on",
        "useReadonlyClassProperties": "on",
        "useShorthandAssign": "on",
        "useShorthandFunctionType": "on",
        "useTrimStartEnd": "on",
        "useUnifiedTypeSignatures": "on"
      },
      "suspicious": {
        "noConstantBinaryExpressions": "on",
        "noEmptyBlockStatements": "on",
        "noEvolvingTypes": "on",
        "noUnassignedVariables": "on",
        "noVar": "on",
        "useErrorMessage": "on"
      }
    }
  }
}
